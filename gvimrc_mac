set showtabline=2
set transparency=1 " 透明度 (For Mac OS X)
set imdisable
set guioptions-=T
set antialias
set tabstop=4
set number
set nobackup
set visualbell t_vb=
set nowrapscan
set columns=120
set lines=58

syntax enable
set t_Co=256
"colorscheme atom-dark-256
colorscheme lucius
set background=dark

highlight Normal ctermbg=none
set guifont=Andale\ Mono:h12
